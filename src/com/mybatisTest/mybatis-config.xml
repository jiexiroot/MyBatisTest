                <property name="password" value="088159"/>
            </dataSource>
        </environment>
    </environments>
    <!-- 配置mapper的位置 -->
    <mappers>
        <mapper resource="com/mybatisTest/mapper/UsersMapper.xml"/>
    </mappers>
</configuration>